rule combine_federated_svd:
    input:
        expand("results/fedsim_fed/{u}/{pid}/pca/localData.csv", u=users_fed, pid=pid_svd_fed),
    output:
        "results/fedsim_fed/combined_localdata.csv",
    params: accessions=accs,
    shell:
        "python workflow/scripts/combine_federated_svd.py "
        " --input {input} "
        " --output {output} "
        " --accessions {params.accessions} "



rule combine_federated_randfor:
    input:
        pred=expand("results/fedsim_fed/{u}/{pid}/pred.csv", u=users_fed, pid=pid_randfor_fed),
        prob=expand("results/fedsim_fed/{u}/{pid}/proba.csv", u=users_fed, pid=pid_randfor_fed),
        true=expand("results/fedsim_fed/{u}/{pid}/test.csv", u=users_fed, pid=pid_randfor_fed),
    output:
        "results/fedsim_fed/combined_randfor.csv",
    params: accessions=accs,
    shell:
        "python workflow/scripts/combine_federated_randfor.py "
        " --input_pred {input.pred} "
        " --input_prob {input.prob} "
        " --input_true {input.true} "
        " --output {output} "
        " --accessions {params.accessions} "


