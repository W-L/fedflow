rule prep_data:
    output:
        expand("data/public_cohorts/{acc}/species_header_index_nostatus.csv", acc=accs),   # SVD
        expand("data/public_cohorts/{acc}/species.csv", acc=accs),                         # randfor    
        "data/public_cohorts/species_header_index_nostatus.csv",                           # SVD 
        "data/public_cohorts/species.csv",                                                 # randfor      
    params:
        ds_features=ds_features,
    shell:
        f"python workflow/scripts/prep_public_cohorts.py "
        f" --outdir data/public_cohorts/ --downsample-features {params.ds_features}"



rule fedsim:   # generic fedsim rule with dummy IO
    input:
        expand("data/{acc}/input.csv", acc=accs),
    output:
        expand("results/{u}/some/Project_{pid}/output.zip", u=users_fed, pid=pid_svd_fed),
    params:
        conf=get_fedsim_config("federated-svd", "fed"),
    resources:
        serial=1,
    shell:
        f"fedsim -c {params.conf} -v "




use rule fedsim as fedsim_svd_fed with: 
    input:
        expand("data/public_cohorts/{acc}/species_header_index_nostatus.csv", acc=accs),
    output:
        expand("results/fedsim_fed/{u}/data/workflows/Project_{pid}/Run_1/results_pr{pid}_run1_step1.zip", u=users_fed, pid=pid_svd_fed),
    params:
        conf=get_fedsim_config("federated-svd", "fed"),



use rule fedsim as fedsim_svd_cent with:
    input:
        "data/public_cohorts/species_header_index_nostatus.csv",
    output:
        expand("results/fedsim_cent/{u}/data/workflows/Project_{pid}/Run_1/results_pr{pid}_run1_step1.zip", u=users_cent, pid=pid_svd_cent),
    params:
        conf=get_fedsim_config("federated-svd", "cent"),



