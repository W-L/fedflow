
configfile: "workflow/config/config.yaml"

ds_features = config['downsample_features']
metadata = config['metadata']
species_signal = config['species_signal']
accs = config['accessions']
tools = config['tools']



def get_fedsim_config(tool, mode):
    return f"resources/{tool}/config_fedsim_{mode}.toml"


def load_fedsim_config(toml_path):
    import rtoml
    with open(toml_path, "r") as f:
        conf = rtoml.load(f)
    # get fc users
    fc_users = []
    for cl in conf['clients'].values():
        fc_users.append(cl['fc_username'])
    # project id
    pid = conf['general']['project_id']
    return pid, fc_users



# load project ids and fc users
pid_svd_fed, users_fed = load_fedsim_config(get_fedsim_config("federated-svd", "fed"))
pid_svd_cent, users_cent = load_fedsim_config(get_fedsim_config("federated-svd", "cent"))
pid_randfor_fed, _ = load_fedsim_config(get_fedsim_config("random-forest", "fed"))
pid_randfor_cent, _ = load_fedsim_config(get_fedsim_config("random-forest", "cent"))
# pid_ada_fed, _ = load_fedsim_config(get_fedsim_config("ada-boost", "fed"))
# pid_ada_cent, _ = load_fedsim_config(get_fedsim_config("ada-boost", "cent"))



